    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "allure-playwright": "^3.2.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
